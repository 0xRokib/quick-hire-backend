# Server
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/quickhire

# CORS
ALLOWED_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Auth / JWT
JWT_SECRET=replace-with-a-random-32-plus-char-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
AUTH_LOGIN_WINDOW_MS=900000
AUTH_LOGIN_MAX_REQUESTS=20
AUTH_ACCOUNT_MAX_FAILURES=5
AUTH_ACCOUNT_LOCK_MS=900000

# Logging
LOG_LEVEL=info
